#include <iostream>

int main(int argc, char const *argv[])
{
    /* an array is a datatype which contains same type of data in contiguous memory locations */
     int num [8] = {3, 5, 6, 5, 6, 7};

 int count = 8;
    
     for (int i = 0; i < count; i++)
    {
        /* code */
        if (num[i] % 2 == 0)
         {
         /* code */
            std::cout << num[i] << " is even\n";
        }else{
            std::cout << num[i] << " is odd\n";
         }        
        
     }    
